{
  "compilerOptions": {
    "declaration": true,
    "outDir": "types",
    "module": "esnext",
    "target": "es2015",
    "lib": [
      "es6",
      "dom",
      "es2016",
      "es2017",
      "dom.iterable",
      "es2019"
    ],
    "sourceMap": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "allowJs": true,
    "checkJs": false,
    "baseUrl": ".",
  },
  "exclude": ["node_modules"]
}
