{
  "compilerOptions": {
    "declaration": true,
    "outDir": "types",
    "module": "Preserve",
    "target": "es2015",
    "lib": ["es6", "dom", "dom.iterable", "es2019"],
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowJs": true,
    "skipLibCheck": true
  },
  "include": ["src", "parse_url.d.ts"],
  "exclude": ["node_modules", "lib", "types"]
}
