{
  "compilerOptions": {
    "declaration": true,
    "outDir": "types",
    "module": "esnext",
    "target": "es2015",
    "lib": ["es6", "dom", "dom.iterable", "es2019"],
    "sourceMap": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowJs": true,
    "checkJs": false,
    "baseUrl": "."
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib", "types"]
}
